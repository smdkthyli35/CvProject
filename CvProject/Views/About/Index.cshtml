@using CvProject.Models.Entity
@model List<About>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Hakkımda</h2>
<br />

<form class="form-group" method="post">
    @foreach (var x in Model)
    {
        <label>Ad</label>
        <input type="text" name="Name" value="@x.Name" class="form-control" />
        <br />
        <label>Soyad</label>
        <input type="text" name="Surname" value="@x.Surname" class="form-control" />
        <br />
        <label>Adres</label>
        <input type="text" name="Address" value="@x.Address" class="form-control" />
        <br />
        <label>Telefon</label>
        <input type="text" name="Phone" value="@x.Phone" class="form-control" />
        <br />
        <label>Mail Adresi</label>
        <input type="text" name="Mail" value="@x.Mail" class="form-control" />
        <br />
        <label>Resim</label>
        <input type="text" name="Image" value="@x.Image" class="form-control" />
        <br />
        <label>Açıklama</label>
        <textarea class="form-control" rows="5" name="Explanation">@x.Explanation</textarea>
        <br />

    }
    <button class="btn btn-primary">Güncelle</button>
</form>


