@model CvProject.Models.Entity.SocialMedia

@{
    ViewBag.Title = "UpdateMedia";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sosyal Medya Düzenleme Sayfası</h2>
<br />

@using (Html.BeginForm("UpdateMedia", "SocialMedia", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Id)

    <div style="margin-bottom:15px">
        @Html.Label("Sosyal Medya Adı")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", required = "required" })
    </div>
    <div style="margin-bottom:15px">
        @Html.Label("Sosyal Medya Linki")
        @Html.TextBoxFor(x => x.Link, new { @class = "form-control", required = "required" })
    </div>
    <div style="margin-bottom:30px">
        @Html.Label("Sosyal Medya Iconu")
        @Html.TextBoxFor(x => x.Icon, new { @class = "form-control", required = "required" })
    </div>
    <div style="margin-bottom:15px">
        <button class="btn btn-info">Düzenle</button>
    </div>
}

