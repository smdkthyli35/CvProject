@model CvProject.Models.Entity.Education
@{
    ViewBag.Title = "UpdateEducation";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Eğitim Düzenleme Sayfası</h2>
<br />

@using (Html.BeginForm("UpdateEducation", "Education", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Id)

    <div style="margin-bottom:15px">
        @Html.Label("Başlık")
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control", required="required" })
    </div>
    <div style="margin-bottom:30px">
        @Html.Label("Altbaşlık")
        @Html.TextBoxFor(x => x.Subtitle, new { @class = "form-control", required = "required" })
    </div>
    <div style="margin-bottom:30px">
        @Html.Label("Departman")
        @Html.TextBoxFor(x => x.Department, new { @class = "form-control", required = "required" })
    </div>
    <div style="margin-bottom:30px">
        @Html.Label("Genel Not Ortalaması (GNO)")
        @Html.TextBoxFor(x => x.GPA, new { @class = "form-control", required = "required" })
    </div>
    <div style="margin-bottom:30px">
        @Html.Label("Tarih")
        @Html.TextBoxFor(x => x.Date, new { @class = "form-control", required = "required" })
    </div>
    <div style="margin-bottom:15px">
        <button class="btn btn-info">Düzenle</button>
    </div>
}

