@using CvProject.Models.Entity
@model List<Skill>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@{ 
    string color = "";
    string labelColor = "";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yetenek Listem</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">ID</th>
                                            <th>Yetenek</th>
                                            <th>Derece</th>
                                            <th style="width:%40px">Oran</th>
                                            <th>Sil</th>
                                            <th>Düzenle</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var x in Model)
                                        {
                                            if (x.Rating >= 0 && x.Rating <= 50)
                                            {
                                                color = "progress-bar bg-danger";
                                                labelColor = "badge bg-danger";
                                            }
                                            if (x.Rating >= 51 && x.Rating <= 70)
                                            {
                                                color = "progress-bar bg-warning";
                                                labelColor = "badge bg-warning";
                                            }
                                            if (x.Rating >= 71 && x.Rating <= 84)
                                            {
                                                color = "progress-bar bg-primary";
                                                labelColor = "badge bg-primary";
                                            }
                                            if (x.Rating >= 85 && x.Rating <= 100)
                                            {
                                                color = "progress-bar bg-success";
                                                labelColor = "badge bg-success";
                                            }
                                        <tr>
                                            <td>@x.Id</td>
                                            <td>@x.SkillName</td>
                                            <td>
                                                <div class="progress progress-xs">
                                                    <div class="@color" style="width: @x.Rating%"></div>
                                                </div>
                                            </td>
                                            <td><span class="@labelColor">@x.Rating%</span></td>
                                            <td>
                                                <a class="btn btn-danger btn-sm" href="/Skill/DeleteSkill/@x.Id">
                                                    <i class="fas fa-trash">
                                                    </i>
                                                    Sil
                                                </a>
                                            </td>
                                            <td>
                                                <a class="btn btn-info btn-sm" href="/Skill/UpdateSkill/@x.Id">
                                                    <i class="fas fa-pencil-alt">
                                                    </i>
                                                    Düzenle
                                                </a>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                                <a style="margin-top:15px" href="@Url.Action("AddSkill","Skill")" class="btn btn-primary">Yeni Yetenek Ekle</a>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</body>
</html>

