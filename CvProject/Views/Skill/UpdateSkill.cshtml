@model CvProject.Models.Entity.Skill
@{
    ViewBag.Title = "UpdateSkill";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Yetenek Düzenleme Sayfası</h2>
<br />

@using (Html.BeginForm("UpdateSkill", "Skill", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.Id)

    <div style="margin-bottom:15px">
        @Html.Label("Yetenek Adı")
        @Html.TextBoxFor(x => x.SkillName, new { @class = "form-control", required = "required" })
    </div>
    <div style="margin-bottom:30px">
        @Html.Label("Yetenek Derecesi")
        @Html.TextBoxFor(x => x.Rating, new { @class = "form-control", required = "required" })
    </div>
    <div style="margin-bottom:15px">
        <button class="btn btn-info">Düzenle</button>
    </div>
}

